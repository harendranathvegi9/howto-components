    "fs-extra": "^1.0.0",
    "marked": "^0.3.6",
    "mz": "^2.6.0",
    "prismjs": "^1.6.0"
  },
  "devDependencies": {
    "chai": "^3.5.0",
    "eslint": "^3.13.1",
    "eslint-config-google": "^0.7.1",
    "express": "^4.14.0",
    "karma": "^1.4.0",
    "karma-chrome-launcher": "^2.0.0",
    "karma-firefox-launcher": "^1.0.0",
    "karma-mocha": "^1.3.0",
    "karma-safari-launcher": "^1.0.0",
    "mocha": "^3.2.0",
    "npm-watch": "^0.1.8",
    "selenium-assistant": "^5.0.4",
    "selenium-webdriver": "=3.0.1"
  }
